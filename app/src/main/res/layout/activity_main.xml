<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/app_thr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="T: "
            android:textColor="#BBDEFB" />


        <TextView
            android:id="@+id/app_re"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="R: "
            android:textColor="#BBDEFB" />

        <TextView
            android:id="@+id/app_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Q: "
            android:textColor="#BBDEFB" />

        <TextView
            android:id="@+id/app_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="B_t:  "
            android:textColor="#BBDEFB" />

        <TextView
            android:id="@+id/objnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="obj_num:"
            android:textColor="#BBDEFB" />
        <TextView
            android:id="@+id/iteration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iteration:"
            android:textColor="#BBDEFB" />
        <TextView
            android:id="@+id/max_triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T_max:"
            android:textColor="#BBDEFB" />
        <TextView
            android:id="@+id/predict_triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pre_tris:"
            android:textColor="#BBDEFB" />

        <TextView
            android:id="@+id/linear_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L_speed:"
            android:textColor="#BBDEFB" />
        <TextView
            android:id="@+id/rotate_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R_speed:"
            android:textColor="#BBDEFB" />



    </com.google.android.material.appbar.AppBarLayout>

    <!--    <include-->
